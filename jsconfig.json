{
    "compilerOptions" : {
        "target" : "ES2020",
        "module" : "ESNext",
        "baseUrl" : ".",
        "paths": {
            "@/*" : ["./src/*"]
        },
        "skipLibCheck" : true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-jsx"
    },
    "include" : ["src"]
}